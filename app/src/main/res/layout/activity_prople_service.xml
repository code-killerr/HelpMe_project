<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/rlfwtitle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#88FFE7">
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/dingwei"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="西北民族大学"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"/>
        </LinearLayout>

        <include layout="@layout/searchbar"
            android:id="@+id/renliSearchLayout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/picture"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#FFF5EE"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_kddq"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bt_sc"
                android:drawableTop="@drawable/kuaidi"
                android:textSize="10dp"
                android:text="快递代取"
                />
            <Button
                android:id="@+id/button_jrfw"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bt_sc"
                android:drawableTop="@drawable/in"
                android:textSize="10dp"
                android:text="借入服务"
                />
            <Button
                android:id="@+id/button_jcfw"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bt_sc"
                android:drawableTop="@drawable/out"
                android:textSize="10dp"
                android:text="借出代取"
                />
            <Button
            android:id="@+id/button_huzu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/bt_sc"
            android:drawableTop="@drawable/huzu"
            android:textSize="10dp"
            android:text="单人协力"
            />
            <Button
                android:id="@+id/button_dr"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bt_sc"
                android:drawableTop="@drawable/duoren"
                android:textSize="10dp"
                android:text="组队协力"
                />
        </LinearLayout>

        <include layout="@layout/fuwulist"/>

        <include layout="@layout/fuwulist"/>

        <include layout="@layout/fuwulist"/>

        <include layout="@layout/fuwulist"/>
    </LinearLayout>
</ScrollView>