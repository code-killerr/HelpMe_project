  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

      <include layout="@layout/title"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#F5F5F5">

          <ImageView
              android:id="@+id/h_back"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true" />

          <ImageView
              android:id="@+id/h_head"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_margin="10dp"
              android:src="@drawable/a1" />

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/h_back"
              android:layout_marginBottom="35dp"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/user_val"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:layout_alignParentStart="true"
                  android:layout_alignParentTop="true"
                  android:layout_marginStart="110dp"
                  android:text="用户2333333"
                  android:textColor="@color/colorPrimaryDark"
                  android:textSize="17sp" />
          </RelativeLayout>

      </RelativeLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:background="#FFF5EE"
          android:orientation="horizontal">

          <Button
              android:id="@+id/button_wdsc"
              android:layout_width="120dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_margin="10dp"
              android:background="#FF7F50"
              android:text="我的收藏"
              android:textColor="#fff" />

          <Button
              android:id="@+id/button_yhj"
              android:layout_width="120dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_margin="10dp"
              android:background="#FF7F50"
              android:text="优惠券"
              android:textColor="#fff" />

          <Button
              android:id="@+id/button_hzb"
              android:layout_width="120dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_margin="10dp"
              android:background="#FF7F50"
              android:text="互助币"
              android:textColor="#fff" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"
          android:layout_marginBottom="0.1dp">

          <TextView
              android:id="@+id/name3"
              android:layout_width="320dp"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:gravity="left"
              android:paddingTop="12dp"
              android:text="我的订单"
              android:textColor="#292421"
              android:textSize="20dp" />

          <Button
              android:layout_width="90dp"
              android:layout_height="39dp"
              android:layout_gravity="center"
              android:background="#FFFFFF"
              android:text="查看历史订单"
              android:textColor="#FFC0CB"/>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:orientation="horizontal"
          android:background="#FFF5EE">
          
          <Button
              android:layout_width="82dp"
              android:layout_height="100dp"
              android:background="#40E0D0"
              android:text="待付款"/>
          <Button
              android:layout_width="82dp"
              android:layout_height="100dp"
              android:background="#40E0D0"
              android:text="待完成"/>
          <Button
              android:layout_width="82dp"
              android:layout_height="100dp"
              android:background="#40E0D0"
              android:text="待确认"/>
          <Button
              android:layout_width="82dp"
              android:layout_height="100dp"
              android:background="#40E0D0"
              android:text="待评价"/>
          <Button
              android:layout_width="82dp"
              android:layout_height="100dp"
              android:background="#40E0D0"
              android:text="退款/售后"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="220dp"
          android:orientation="vertical"
          android:layout_marginBottom="0.1dp"
          android:background="#F0FFFF">

          <Button
              android:id="@+id/text_address"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="#F0FFFF"
              android:gravity="center"
              android:padding="3dp"
              android:text="我的地址"
              android:textColor="#A020F0"
              android:textSize="20dp"/>
          <Button
              android:id="@+id/text_yj"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="#F0FFFF"
              android:gravity="center"
              android:padding="3dp"
              android:text="意见反馈"
              android:textColor="#A020F0"
              android:textSize="20dp"/>
          <Button
              android:id="@+id/text_update"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="#F0FFFF"
              android:gravity="center"
              android:padding="3dp"
              android:text="检查更新"
              android:textColor="#A020F0"
              android:textSize="20dp"/>
          <Button
              android:id="@+id/text_us"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="#F0FFFF"
              android:gravity="center"
              android:padding="3dp"
              android:text="关于我们"
              android:textColor="#A020F0"
              android:textSize="20dp"/>

      </LinearLayout>






      </LinearLayout>